<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jx.calculator.presentation.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Calculator"
        tools:context=".ui.MainActivity"
        tools:ignore="HardcodedText">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/display_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:theme="@style/Theme.Display"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <HorizontalScrollView
                android:id="@+id/calc_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/display_calc"
                    style="@style/Theme.Display_Calc"
                    bindCalc="@={viewModel.display.calc}"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical|end"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingHorizontal="16dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAlignment="textEnd" />
            </HorizontalScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/display_result"
                style="@style/Theme.Display_Result"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_vertical|end"
                android:lines="1"
                android:paddingHorizontal="16dp"
                android:text="@={viewModel.display.result}" />

            <RelativeLayout
                android:id="@+id/options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_backspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="16dp"
                    android:src="@drawable/backspace" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <GridLayout
            android:id="@+id/num_keyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="4"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/display_layout">

            <!-- Row 1 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ac"
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{()->viewModel.display.reset()}"
                android:text="AC" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="^" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="%" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="÷" />

            <!-- Row 2 -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:foreground="@drawable/top_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:foreground="@drawable/left_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="×" />

            <!-- Row 3 -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:foreground="@drawable/left_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="−" />

            <!-- Row 4 -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Theme.Op_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:foreground="@drawable/left_border"
                android:onClick="@{viewModel::setDigit}"
                android:text="+" />

            <!-- Row 5 -->
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:onClick="@{viewModel::setDigit}"
                android:text="," />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:background="#5dbdd3"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:text="="
                android:textColor="@color/black_night" />

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>