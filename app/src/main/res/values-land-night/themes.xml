<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_night</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black_night</item>
        <item name="android:background">@color/black_night</item>
        <item name="buttonStyle">@style/Theme.Button</item>
        <item name="imageButtonStyle">@style/Theme.Image_Button</item>
    </style>

    <style name="Theme.Display" parent="Theme.Calculator">
        <item name="android:background">@color/grey_night</item>
    </style>

    <style name="Theme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nova_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Op_Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_diamond</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Theme.Image_Button" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/blue_diamond</item>
        <item name="android:background">@color/grey_night</item>
    </style>

    <style name="Theme.Display_Calc" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nova_white</item>
        <item name="android:background">@color/grey_night</item>
    </style>

    <style name="Theme.Display_Result" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/grey_night</item>
    </style>

</resources>